<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_item_song"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/carview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginEnd="8dp"
        >
        <ImageView
            android:id="@+id/imv_song"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/nau_an_cho_em"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_song_name"
        android:layout_width="match_parent"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/carview"
        android:fontFamily="@font/montserrat_medium"
        android:text="Nấu Cho Em Ăn"
        android:layout_toLeftOf="@+id/tv_song_time"
        android:textColor="#191717"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_singer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_song_name"
        android:layout_toRightOf="@+id/carview"
        android:fontFamily="@font/montserrat_medium"
        android:text="Đen vâu"
        android:textColor="#7D7C7C"
        android:textSize="10sp"

        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/tv_song_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="1:30"
        android:textColor="@color/black"
        android:textSize="12sp" />



</RelativeLayout>